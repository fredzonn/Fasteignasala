<%- include('header') -%>

<h1 class = "head">Notendur</h1>

<form method="post" action="/admin/updateAdmin">
<div class = "table">
    <table>
        <tr>
            <% if(user && user.admin){ %>
            <th>Stjórnandi?</th>
            <% } %>
            <th>Notendanafn</th>
            <th>Nafn</th>
            <th>Netfang</th>
        </tr>
        <% users.forEach((u) => { %>
        <tr>
            <% if(user.admin){ %>
            <td>
                <% if(u.admin){ %>
                <input name = "checkAdmin" type = "checkbox" value="<%= u.id %>" checked>
            <% } else { %>
                <input name = "checkAdmin" type = "checkbox" value ="<%= u.id %>">
            <% } %>
            </td>
            <% } %>
            <td><%= u.username %></td>
            <td><%= u.name %></td>
            <td><%= u.email %></td>
        </tr>
        <% }) %>
    </table>

    <% if(user && user.admin){ %>
        <button class = "adminUpdate">Uppfæra stjórnendur</button>
    <% } %>
  </form>
</div>

  
<%- include('footer') -%>