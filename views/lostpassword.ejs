<%- include('header') -%>

<h1 class = "head">Týnt lykilorð</h1>

<form method="post" action="/lostPassword">

  <div class="field<%= locals.isInvalid('email', errors) ?  ' field--invalid' : '' %>">
    <label for="email">Netfang</label>
    <input type="text" name="email" id="email" value="<%= email %>" class="">
  </div>

  <% if (errors.length > 0) { %>
    <h2>Vandræði við að sækja um lykilorð:</h2>
    <ul class="errors">
      <% errors.forEach((error) => { %>
        <li class="error"><label for="<%= error.param %>"><%= error.msg %></label></li>
      <% }); %>
    </ul>
  <% } %>

  <button>Fá nýtt lykilorð</button>
</form>

<%- include('footer') -%>